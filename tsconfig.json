{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "target": "ES6",
    "declaration": true,
    "lib": ["ES5", "ES6", "ES7", "ES2018.Promise"],
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["test"],
  "include": ["src/**/*.ts"]
}
