{
  "name": "@blucass/react-lite-pc",
  "version": "1.0.2",
  "description": "PC 端react-lite版本启动框架，基于create-react-app CLI",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "ahooks": "^3.7.8",
    "antd": "^5.9.3",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.16.0",
    "react-router-dom": "^6.16.0",
    "umi-request": "^1.4.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "commit": "git-cz",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx --fix ./src"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@blucass/eslint-config-react": "latest",
    "@tsconfig/create-react-app": "^2.0.1",
    "@types/customize-cra": "^1.0.5",
    "@types/node": "^14.14.41",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "customize-cra": "^1.0.0",
    "customize-cra-less-loader": "^2.0.0",
    "eslint": "^8.50.0",
    "git-cz": "^4.7.6",
    "less": "4.2.0",
    "less-loader": "11.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "5.0.1",
    "typescript": "^5.2.2",
    "yorkie": "^2.0.0"
  }
}
