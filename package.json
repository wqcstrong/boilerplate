{
  "name": "react-vite-pc",
  "version": "1.0.0",
  "description": "基于 Vite 构建的 react 项目脚手架。",
  "license": "ISC",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx --fix ./src"
  },
  "devDependencies": {
    "@types/node": "^17.0.45",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-config-alloy": "^4.9.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "less": "^4.2.0",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-ejs": "^1.6.4",
    "vite-plugin-svgr": "^3.3.0",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@blucass/eslint-config-typescript": "^1.1.0",
    "ahooks": "^3.7.8",
    "antd": "^5.9.3",
    "dayjs": "^1.11.10",
    "immer": "^10.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "umi-request": "^1.4.0",
    "zustand": "^4.4.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "src/**/*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
